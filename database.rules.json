{
  "rules": {
    "food_outlets": {
      ".read": true,
      ".write": "auth != null",
      "$outletId": {
        ".validate": "newData.hasChildren(['name', 'classification', 'cuisine', 'budget', 'location', 'createdAt'])",
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 100"
        },
        "classification": {
          ".validate": "newData.isString()"
        },
        "cuisine": {
          ".validate": "newData.isString()"
        },
        "budget": {
          ".validate": "newData.isNumber() && newData.val() >= 1 && newData.val() <= 4"
        },
        "location": {
          ".validate": "newData.hasChildren(['latitude', 'longitude', 'address'])"
        },
        "description": {
          ".validate": "!newData.exists() || newData.isString()"
        },
        "tags": {
          ".validate": "!newData.exists() || newData.hasChildren()"
        },
        "imageUrl": {
          ".validate": "!newData.exists() || newData.isString()"
        },
        "isOpen": {
          ".validate": "!newData.exists() || newData.isBoolean()"
        },
        "rating": {
          ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0 && newData.val() <= 5)"
        },
        "averageRating": {
          ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0 && newData.val() <= 5)"
        },
        "reviewCount": {
          ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0)"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "createdBy": {
          ".validate": "!newData.exists() || newData.isString()"
        },
        "updatedAt": {
          ".validate": "!newData.exists() || newData.isString()"
        }
      }
    },
    "reviews": {
      ".read": true,
      ".write": "auth != null",
      "$reviewId": {
        ".validate": "newData.hasChildren(['outletId', 'userId', 'userName', 'rating', 'summary', 'createdAt'])",
        "outletId": {
          ".validate": "newData.isString()"
        },
        "userId": {
          ".validate": "newData.isString() && newData.val() == auth.uid"
        },
        "userName": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 100"
        },
        "userPhotoUrl": {
          ".validate": "!newData.exists() || newData.isString() || newData.val() == null"
        },
        "rating": {
          ".validate": "newData.isNumber() && newData.val() >= 1 && newData.val() <= 5"
        },
        "summary": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 500"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}
